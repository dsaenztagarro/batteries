<div class="row">
  <div class="col-md-12">
    <%= panel_for @foods do %>
      <% if @foods.empty? %>
        <%= alert_empty @foods %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Food model</th>
              </tr>
            </thead>
            <tbody>
            <% @foods.each do |model| %>
              <tr>
                <td><%= link_to model.food_model_name, food_path(model) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <%= link_to 'New Food', new_food_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
