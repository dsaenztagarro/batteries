<div class="row">
  <div class="col-md-12">
    <%= panel_for @battery_sizes do %>
      <% if @battery_sizes.empty? %>
        <%= alert_empty @battery_sizes %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @battery_sizes.each do |model| %>
              <% cache model do %>
                <tr>
                  <td><%= link_to model.name, battery_size_path(model) %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <%= link_to 'New Battery size', new_battery_size_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
