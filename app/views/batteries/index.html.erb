<div class="row">
  <div class="col-md-12">
    <%= panel_for @batteries do %>
      <% if @batteries.empty? %>
        <%= alert_empty @batteries %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @batteries.each do |battery| %>
              <% cache battery do %>
                <tr>
                  <td><%= link_to battery.name, battery_path(battery) %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <%= link_to 'New Battery', new_battery_path, class: 'btn btn-primary m-r-5 m-b-5' %>
    <% end %>
  </div>
</div>
