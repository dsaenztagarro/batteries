<div class="row">
  <div class="col-md-12">
    <%= panel_for @batteries do %>
      <% if @batteries.empty? %>
        <%= alert_empty @batteries %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @batteries.each do |model| %>
              <tr>
                <td><%= link_to model.name, battery_path(model) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
