<div class="row">
  <div class="col-md-12">
    <%= panel_for @battery_models do %>
      <% if @battery_models.empty? %>
        <%= alert_empty @battery_models %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @battery_models.each do |battery_model| %>
              <% cache battery_model do %>
                <tr>
                  <td><%= link_to battery_model.fullname, battery_model_path(battery_model) %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <%= link_to 'New Battery model', new_battery_model_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
