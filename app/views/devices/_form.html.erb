<% disabled ||= false %>
<%= form_for(device, disabled: disabled)   do |f| %>
	<%= f.text_field :name %>
  <% cache('all_device_categories') do %>
    <%= f.collection_select :device_category_id, DeviceCategory.all, :id, :name %>
  <% end %>
  <%= avatar_for(device_model, f) if edit? %>
  <%= submit(f) %>
<% end %>
