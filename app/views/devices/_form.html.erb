<% disabled ||= false %>
<%= form_for device do |f| %>
  <%= header_section 'details' %>
	<%= f.text_field :name, disabled: disabled %>
  <%= f.collection_select :device_category_id, DeviceCategory.all, :id, :name %>

  <% if edit? %>
    <%= avatar_for(device, f) %>
    <%= properties_for(device, f) %>
  <% end %>

  <%= submit(f) %>
<% end %>
