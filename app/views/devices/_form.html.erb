<%= form_for device, builder: BootstrapFormBuilder, remote: true do |f| %>
	<%= f.text_field_group :name, disabled: @disabled %>

  <fieldset id='properties'>
    <legend>Properties</legend>
		<table class='table table-striped'>
			<thead>
				<th>Name</th>
				<th>Value</th>
				<th>Delete</th>
			</thead>
			<tbody>
				<%= f.fields_for :properties do |builder| %>
					<%= render 'property_fields', f: builder %>
				<% end %>
			</tbody>
		</table>
  </fieldset>

	<%= f.submit %>
<% end %>
