<!-- begin row -->
<div class="row">
  <!-- begin col-12 -->
  <div class="col-md-12">
    <%= panel_for 'List of Devices' do %>
      <%= link_to 'New devices', new_device_path, class: 'btn btn-primary m-r-5 m-b-5' %>
      <div class="table-responsive">
        <table id="data-table" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th class="col-xs-1"></th>
              <th class="col-xs-1"></th>
              <th class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
          <% @devices.each do |device| %>
            <tr>
              <td><%= image_tag device.avatar.url %></td>
              <td><%= device.name %></td>
              <%= render partial: '/shared/operations', locals: { object: device } %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->
