<div class="row">
  <div class="col-md-12">
    <%= panel_for @brands do %>
      <% if @brands.empty? %>
        <%= alert_empty @brands %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @brands.each do |model| %>
              <tr>
                <td><%= link_to model.name, brand_path(model) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <%= link_to 'New Brand', new_brand_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
