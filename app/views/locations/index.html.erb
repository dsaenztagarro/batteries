<div class="row">
  <div class="col-md-12">
    <%= panel_for @locations do %>
      <% if @locations.empty? %>
        <%= alert_empty @locations %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @locations.each do |model| %>
              <tr>
                <td><%= model.name %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <%= link_to 'New Location', new_location_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
