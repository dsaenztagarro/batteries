<p id="notice"><%= notice %></p>

<h1>Listing Battery Pack Types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @battery_pack_types.each do |battery_pack_type| %>
      <tr>
        <td><%= link_to 'Show', battery_pack_type %></td>
        <td><%= link_to 'Edit', edit_battery_pack_type_path(battery_pack_type) %></td>
        <td><%= link_to 'Destroy', battery_pack_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<!-- begin row -->
<div class="row">
  <!-- begin col-12 -->
  <div class="col-md-12">
    <%= panel_for 'List of Battery Pack Types' do %>
      <%= link_to 'New Battery pack type', new_battery_pack_type_path, class: 'btn btn-primary m-r-5 m-b-5' %>
      <div class="table-responsive">
        <table id="data-table" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th class="col-xs-1"></th>
              <th class="col-xs-1"></th>
              <th class="col-xs-1"></th>
            </tr>
          </thead>
          <tbody>
          <% @battery_pack_types.each do |battery_pack_type| %>
            <tr>
              <td><%= image_tag device.avatar.url %></td>
              <td><%= device.name %></td>
              <%= render partial: '/shared/operations', locals: { object: device } %>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
  <!-- end col-12 -->
</div>
<!-- end row -->
