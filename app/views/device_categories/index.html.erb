<div class="row">
  <div class="col-md-12">
    <%= panel_for @device_categories do %>
      <% if @device_categories.empty? %>
        <%= alert_empty @device_categories %>
      <% else %>
        <div class="table-responsive">
          <table id="data-table" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Name</th>
              </tr>
            </thead>
            <tbody>
            <% @device_categories.each do |model| %>
              <tr>
                <td><%= link_to model.name, device_category_path(model) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      <%= link_to 'New Device category', new_device_category_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
